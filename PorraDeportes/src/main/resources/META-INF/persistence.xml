<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="PorraDeportes" transaction-type="RESOURCE_LOCAL">
        <class>es.iespuertodelacruz.yt.porradeportes.entities.Apuesta</class>
        <class>es.iespuertodelacruz.yt.porradeportes.entities.Deporte</class>
        <class>es.iespuertodelacruz.yt.porradeportes.entities.Equipo</class>
        <class>es.iespuertodelacruz.yt.porradeportes.entities.Evento</class>
        <class>es.iespuertodelacruz.yt.porradeportes.entities.HistorialEvento</class>
        <class>es.iespuertodelacruz.yt.porradeportes.entities.HistorialEventoId</class>
        <class>es.iespuertodelacruz.yt.porradeportes.entities.Participante</class>
        <class>es.iespuertodelacruz.yt.porradeportes.entities.ParticipanteId</class>
        <class>es.iespuertodelacruz.yt.porradeportes.entities.Role</class>
        <class>es.iespuertodelacruz.yt.porradeportes.entities.TiposApuesta</class>
        <class>es.iespuertodelacruz.yt.porradeportes.entities.Usuario</class>

    <properties>
        <property name="javax.persistence.jdbc.url"
                  value="jdbc:mysql://localhost:3306/porra_deportes?serverTimezone=UTC"/>
        <property name="javax.persistence.jdbc.user" value="root"/>
        <property name="javax.persistence.jdbc.driver"
                  value="com.mysql.cj.jdbc.Driver"/>
        <property name="javax.persistence.jdbc.password" value=""/>

        <property name="hibernate.dialect"
                  value="org.hibernate.dialect.MySQLDialect" />
        <property name="hibernate.show_sql" value="true" />


    </properties>
    </persistence-unit>
</persistence>
